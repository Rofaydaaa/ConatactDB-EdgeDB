@page
@model EditModel
@{
}

<div class="row">
	<div class="col-lg-9 mx-auto rounded border p-3">
		<h2 class="text-center mb-5">Edit Contact Form</h2>

		@if (Model.ErrorMessage.Length > 0)
		{
			<div class="alert alert-warning alert-dismissible fade show" role="alert">
				<strong>@Model.ErrorMessage</strong>
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
			</div>
		}
		else if (Model.SuccessMessage.Length > 0)
		{
			<div class="alert alert-success alert-dismissible fade show" role="alert">
				<strong>@Model.SuccessMessage</strong>
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
			</div>
		}

		<form method="post">
			<input type="hidden" name="id" value="@Model.ContactInfoInput.Id">
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">First Name</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="ContactInfoInput.FirstName">
					<span asp-validation-for="ContactInfoInput.FirstName" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Last Name</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="ContactInfoInput.LastName">
					<span asp-validation-for="ContactInfoInput.LastName" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Email</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="ContactInfoInput.Email">
					<span asp-validation-for="ContactInfoInput.Email" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Title</label>
				<div class="col-sm-8">
					<select class="form-select" asp-for="ContactInfoInput.Title">
						@foreach (var title in Enum.GetValues(typeof(Title)))
						{
							<option value="@title">@title</option>
						}
					</select>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Description</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="ContactInfoInput.Description">
					<span asp-validation-for="ContactInfoInput.Description" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Date of Birth</label>
				<div class="col-sm-8">
					<input type="date" class="form-control" asp-for="ContactInfoInput.DateOfBirth">
					<span asp-validation-for="ContactInfoInput.DateOfBirth" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Married</label>
				<div class="col-sm-8">
					<label>
						<input type="radio" asp-for="ContactInfoInput.MarriageStatus" value="true"> Yes
					</label>
					<label>
						<input type="radio" asp-for="ContactInfoInput.MarriageStatus" value="false"> No
					</label>
					<span asp-validation-for="ContactInfoInput.MarriageStatus" class="text-danger"></span>
				</div>
			</div>


			<div class="row mb-3">
				<div class="offset-sm-4 col-sm-8">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
			</div>
		</form>
	</div>
</div>
