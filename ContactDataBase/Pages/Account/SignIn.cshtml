@page
@model SignInModel
@{
}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
                <h2 class="text-center mb-4">Sign In</h2>
                <form method="post" asp-page-handler="SignIn">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label for="username">Username:</label>
                    <input type="text" class="form-control" id="username" name="SignInInput.Username">
                    <span asp-validation-for="SignInInput.Username" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label for="password">Password:</label>
                    <input type="password" class="form-control" id="password" name="SignInInput.Password">
                    <span asp-validation-for="SignInInput.Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-3">Sign In</button>
                </form>
        </div>
    </div>
</div>